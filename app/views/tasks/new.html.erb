<h1>New Task</h1>

<%= form_with model: @task, local: true do |f| %>
  <div class="form-group">
  	<%= f.label :name, '名称' %>
  	<%= f.text_field :name, class: 'form-control', id: 'task_name' %>
  </div>
  <div class="form-group">
  	<%= f.label :description %>
  	<%= f.text_area :description, class: 'form-control', id: 'task_description' %>
  </div>
  <div class="submit">
  	<%= f.submit 'Create' %>
  </div>
<% end %>